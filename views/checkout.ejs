<!-- checkout.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Checkout</title>
  </head>
  <body>
  <header></header>
  <h1>Checkout</h1>
  <form id="checkoutForm">
    <h2>Hi <%= user.username%></h2>
    <!-- User ID (Hidden Field) -->
    <input type="hidden" id="user" name="userId" value="<%= user._id %>">
    
    <!-- Email -->
    <label for="email">Email:</label>
    <input type="email" id="email" name="email" required>
    
    <!-- Total Price (Hidden Field) -->
    <input type="hidden" id="total-Price" name="total-Price" value="<%= totalPrice %>">
    
    <!-- Takeaway Option -->
    <label for="TA">Takeaway:</label>
    <input type="checkbox" id="TA" name="TA">
    
    <!-- Delivery Option -->
    <label for="delivery">Delivery:</label>
    <input type="checkbox" id="delivery" name="delivery">
    
    <!-- Submit Button -->
    <button onclick="createOrder()" class="button">Place Order</button>
  </form>
  <div id="totalPrice" value="<%= totalPrice%>"> Sum: <%= encodeURIComponent(totalPrice) %></div>
  <section class="checkout">
    <h1>Checkout</h1>
</section>
  <script src="js/common.js"></script>
  <script src="/js/checkout.js"></script>
  <footer></footer>
</body>
</html>
