<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Delicious Dishes</title>
    <link rel="stylesheet" href="/css/dishes.css">
    <link rel="icon" type="image/png" href="/assets/images/takeout-bag.png">
</head>
<body>
    <header>
        <!-- Header content here -->
    </header>

    <section class="dishes">
        <h1>Your Delicious Dishes</h1>
        <h2>Search By Dishes:</h2>
<input type="text" id="search-term" placeholder="Enter search term">

        <h2>Search by Price Range:</h2>
<input type="number" id="min-price" placeholder="Min Price">
<input type="number" id="max-price" placeholder="Max Price">
<br />
<br />
<button id="search-button">Search</button>
<div id="errors" style="color: red; background: rgb(255, 255, 189); border: 1px solid black; border-radius: 25px; margin: 10px"></div>
        <div class="dishes-list">
            <% dishes.forEach(dish => { %>
                <div class="dish">
                    <a href="/dishes/productPage?id=<%= dish._id %>">
                        <img class="dish-img" src="<%= dish.imgUrl %>"/>
                        <div class="dish-name">
                            <h2><%= dish.name %></h2>
                        </div>
                    </a>
                    <p><%= dish.description %></p>
                    <p class="dish-price">Price: $<%= dish.price %></p>
                </div>
            <% }); %>
        </div>
    </section>

    <footer>
        <!-- Footer content here -->
    </footer>

    <script src="/js/common.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/js/dishes.js"></script>
</body>
</html>
