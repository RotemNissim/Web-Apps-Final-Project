<!-- views/product.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= product.name %></title>
  <link rel="icon" type="image/png" href="/assets/images/takeout-bag.png">
  <link rel="stylesheet" href="/css/produdctPage.css">
</head>
<body>
  <header>
    <!-- Your header content here -->
  </header>
  <main>
    <section class="product-details">
      <h1><%= product.name %></h1>
      <img src="<%= product.imgUrl %>" alt="<%= product.name %>">
      <p><%= product.description %></p>
      <p>Price: <%= product.Price %> â‚ª</p>
      <p>Restaurant: <%= product.restaurant.name %></p>
      <button id="addToCartBtn" data-name="<%= product.name %>" data-price="<%=product.Price %>">Add to cart</button>
      <!-- Add more product information as needed -->      
    
    </section>
  </main>



  
  <div class="reviews">
    <h2>Reviews</h2>
    
    <!-- Display reviews -->
    <% for (let i = 0; i < revs.length; i++) { %>
      <div class="review">
              <p> <%= revs[i].text %></p>
        <p>Rate: <%= revs[i].rate %></p>
      </div>
    <% } %>
  </div>
  

  
  <!-- Add the Google Maps iframe section here -->
  <h2>Location</h2>
  <section class="google-map">
  
    <iframe
    width="65%"
    height="300"
    frameborder="0"
    style="border: 0"
    
    
    src="https://www.google.com/maps/embed/v1/place?key=AIzaSyBGeMncrsBMb9ZS38FeHFW3e_j6ohy05o4&q=<%= encodeURIComponent(product.restaurant.address) %>">
  </iframe>
</section>

<footer>
  <!-- Your footer content here -->
</footer>
</body>
<script src="/js/common.js"></script>
<script src="/js/productsPage.js"></script>
</html>
