<head>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/js/restaurants.js"></script>
</head>

<h1>Create Restaurant</h1>
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-3">
                <label class="control-label">Name:</label>
                <input type="text" class="form-control" id="name" placeholder="name">
                <span class="help-block"></span>
                <div id ="name-error" class="help-block"></div>
                <label class="control-label">Address:</label>
                <input type="text" class="form-control" id="address" placeholder="address">
                <span class="help-block"></span>
                <div id ="address-error" class="help-block"></div>
                <label class="control-label">Cuisine:</label>
                <input type="text" class="form-control" id="cuisine" placeholder="cuisine">
                <span class="help-block"></span>
                <div id ="cuisine-error" class="help-block"></div>
                <label class="control-label">Dishes:</label>
                <select multiple class="form-control" id="dishes">
                <% allDishes.forEach(function(dish) { %>
                <option value="<%= dish._id %>"><%= dish.name %></option>
                 <% }); %>
                </select>
             </div>
         <div class="form-group">
               <div class="col-md-offset-3 col-md-9">
                   <button onclick="createRestaurant()" class="btn btn-default">Create Restaurant</button>
              </div>
    
        </div>
    </div>
